#!/usr/bin/env bash
set -euo pipefail

# Thin launcher for local development.
# - Ensures .venv exists (created by scripts/setup.sh)
# - Activates it and runs the GUI entrypoint via WikidPad.py (calls main()).

REPO_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
VENV_DIR="$REPO_DIR/.venv"

if [[ ! -d "$VENV_DIR" ]]; then
  echo "Missing venv at $VENV_DIR. Run scripts/setup.sh first." >&2
  exit 1
fi

source "$VENV_DIR/bin/activate"

# Container-friendly default: use GUI_DISPLAY (or :99) when DISPLAY is unset.
if [[ -z "${DISPLAY:-}" ]]; then
  export DISPLAY="${GUI_DISPLAY:-:99}"
fi

exec python "$REPO_DIR/WikidPad.py" "$@"
